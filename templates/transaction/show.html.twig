{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
<div class="page-container">
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ transaction.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ transaction.type.label }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class="btn btn-primary">Editer</a>

    <a href="{{ path('app_transaction_index') }}" class="btn btn-success">Retour aux transactions</a>

    {{ include('transaction/_delete_form.html.twig') }}
</div>
{% endblock %}
